<?xml version="1.0" encoding="UTF-8"?>
<threddsConfig>

  <serverInformation>
    <name>OU SoM TDS</name>
    <logoUrl>/thredds/threddsIcon.gif</logoUrl>
    <logoAltText>IDD TDS</logoAltText>

    <abstract>Scientific Data</abstract>
    <keywords>meteorology, atmosphere, climate, ocean, earth science</keywords>

    <contact>
      <name>THREDDS Support</name>
      <organization>UCAR/Unidata</organization>
      <email>support-thredds@unidata.ucar.edu</email>
      <!--phone></phone-->
    </contact>
    <hostInstitution>
      <name>University of Oklahoma - School of Meteorology</name>
      <webSite>http://som.ou.edu/</webSite>
      <logoUrl>https://dl.dropboxusercontent.com/u/75575742/somTds/SoMLogo.png</logoUrl>
      <logoAltText>OU - SoM<logoAltText>
    </hostInstitution>
  </serverInformation>

  <DataRoots>
    <idd>[DATA_DIR]</idd>
  </DataRoots>

  <!--
   * Setup for generated HTML pages.
   *
   * NOTE: URLs may be absolute or relative, relative URLs must be relative
   * to the webapp URL, i.e., http://server:port/thredds/.
    -->
  <htmlSetup>
    <!--
     * CSS documents used in generated HTML pages.
     * The CSS document given in the "catalogCssUrl" element is used for all pages
     * that are HTML catalog views. The CSS document given in the "standardCssUrl"
     * element is used in all other generated HTML pages.
     * -->
    <standardCssUrl>tds.css</standardCssUrl>
    <catalogCssUrl>tdsCat.css</catalogCssUrl>
    <openDapCssUrl>tdsDap.css</openDapCssUrl>

    <!--
     * The URLs (relative to "/thredds/") and alternate text for both
     * folder and dataset icons used in HTML catalog views.
     * -->
    <folderIconUrl>folder.gif</folderIconUrl>
    <folderIconAlt>Folder</folderIconAlt>
    <datasetIconUrl>dataset.gif</datasetIconUrl>
    <datasetIconAlt>Dataset</datasetIconAlt>

  </htmlSetup>

  <!--
   The <CatalogServices> element:
   -->
  <CatalogServices>
    <allowRemote>false</allowRemote>
  </CatalogServices>

  <NetcdfFileCache>
    <minFiles>50</minFiles>
    <maxFiles>100</maxFiles>
    <scour>5 min</scour>
  </NetcdfFileCache>
  <GribCollection>
    <minFiles>5</minFiles>
    <maxFiles>10</maxFiles>
    <scour>5 min</scour>
  </GribCollection>
  <TimePartition>
    <minFiles>5</minFiles>
    <maxFiles>10</maxFiles>
    <scour>5 min</scour>
  </TimePartition>
  <HTTPFileCache>
    <minFiles>5</minFiles>
    <maxFiles>20</maxFiles>
    <scour>10 min</scour>
  </HTTPFileCache>

  <NetcdfSubsetService>
    <allow>true</allow>
    <scour>15 min</scour>
    <maxAge>30 min</maxAge>
  </NetcdfSubsetService>

  <WCS>
    <allow>true</allow>
    <allowRemote>false</allowRemote>
    <scour>15 min</scour>
    <maxAge>30 min</maxAge>
  </WCS>

  <WMS>
    <allow>true</allow>
    <allowRemote>false</allowRemote>
    <allowFeatureInfo>true</allowFeatureInfo>
    <maxImageWidth>5000</maxImageWidth>
    <maxImageHeight>5000</maxImageHeight>
  </WMS>

  <NCISO>
    <ncmlAllow>true</ncmlAllow>
    <uddcAllow>true</uddcAllow>
    <isoAllow>true</isoAllow>
  </NCISO>

  <!-- nj22Config
    <ioServiceProvider class="edu.univ.ny.stuff.FooFiles"/>
    <coordSysBuilder convention="foo" class="test.Foo"/>
    <coordTransBuilder name="atmos_ln_sigma_coordinates" type="vertical" class="my.stuff.atmosSigmaLog"/>
    <typedDatasetFactory datatype="Point" class="gov.noaa.obscure.file.Flabulate"/>
  </nj22Config -->

  <!--Netcdf4Clibrary>
     <libraryPath>/opt/netcdf/lib</libraryPath>
     <libraryName>netcdf</libraryName>
   </Netcdf4Clibrary-->

  <DiskCache>
    <alwaysUse>false</alwaysUse>
    <scour>1 hour</scour>
    <maxSize>1 G</maxSize>
  </DiskCache>

  <AggregationCache>
    <scour>24 hours</scour>
    <maxAge>30 days</maxAge>
  </AggregationCache>

  <FeatureCollection>
    <RollingFileAppender>
      <MaxFileSize>10 MB</MaxFileSize>
      <MaxBackups>50</MaxBackups>
      <Level>DEBUG</Level>
    </RollingFileAppender>
 </FeatureCollection>

  <GribIndex>
    <neverUse>true</neverUse>
  </GribIndex>

</threddsConfig>
